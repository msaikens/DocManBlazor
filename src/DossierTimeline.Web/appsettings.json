{
    "Admin": {
        "Email": "admin@example.com",
        "Password": "ChangeThis!123"
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Default": "Data Source=dossier.db"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Lucene": {
        "IndexPath": "App_Data/lucene-index" // will be created if missing
    },
    "Storage": {
        "Mode": "Local", // Local | AzureBlob
        "Local": {
            "Root": "wwwroot/uploads" // relative to Web project content root
        },
        "AzureBlob": {
            "ConnectionString": "",
            "Container": "dossier"
        }
    },
    "Uploads": {
        "MaxFileSizeBytes": 2147483648, // 2 GB
        "AllowedContentTypes": [
            "application/pdf",
            "application/docx",
            "application/doc",
            "application/zip",
            "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
            "application/msword",
            "image/png",
            "image/jpeg",
            "message/rfc822"
        ]
    }
}
